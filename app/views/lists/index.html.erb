<h1>My Lists</h1>
<%= link_to "New List", new_list_path, class: "btn btn-primary mb-3" %>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4 mb-4">
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card-category"
             style="background-image: url('<%= list.photo.attached? ?
                 cl_image_path(list.photo.key, width: 500, height: 300, crop: :fill) :
                 "https://picsum.photos/500/300" %>');">
          <%= list.name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
